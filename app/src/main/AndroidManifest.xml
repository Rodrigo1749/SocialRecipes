<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permiso obligatorio para Supabase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RecetarioSocial">
        <activity
            android:name=".controller.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.LoginActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".controller.RegistrarseActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".controller.HomeActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.RegistraReceta"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.DetallesRecetaActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.PerfilActivity"
            android:exported="false">
        </activity>

        <activity
            android:name=".controller.BuscadorActivity"
            android:exported="false">
        </activity>

        <!-- NUEVO: Registrar la FavoritosActivity -->
        <activity
            android:name=".controller.FavoritosActivity"
            android:exported="false">
        </activity>

    </application>

</manifest>